  "type": "module",
  "scripts": {
    "dev": "tsx --watch --env-file .env src/index.ts",
    "start": "node --env-file .env dist/src/index.js",
    "build": "tsc -p tsconfig.build.json",
    "type-check": "tsc --noEmit",
    "crawler": "tsx ./parser/crawler.ts",
    "downloader": "sh parser/dns_shop_downloader.sh && npm run crawler && sh parser/dns_shop_downloader_prices.sh",
    "add:list": "tsx ./add_price_list",
    "add:mutated": "tsx ./add_mutated_items",
    "add:diff": "tsx ./add_diff",
    "add:history": "tsx ./add_history",
    "check:favorites": "tsx ./check_favorites",
    "parse": "npm run downloader && npm run add:list && npm run add:mutated && npm run add:diff && npm run add:history && npm run check:favorites",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "body-parser": "^2.2.1",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.3",
    "ejs": "^3.1.10",
    "express": "^5.2.1",
    "mongodb": "^7.0.0",
    "mongoose": "^9.1.1"
  },
  "devDependencies": {
    "@tsconfig/node24": "^24.0.3",
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.6",
    "prettier": "^3.7.4",
    "regenerator-runtime": "^0.14.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "imports": {
    "#*": "./*"
  }
}
